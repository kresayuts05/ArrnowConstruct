@model PostFormViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Title</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
               <div class="mb-3">
                <label asp-for="@Model.ShortContent" class="form-label">Short Content</label>
                <input asp-for="@Model.ShortContent" class="form-control" aria-required="true" />
                <span asp-validation-for="ShortContent" class="text-danger"></span>
            </div>
              <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <input type ="text" asp-for="@Model.Description" class="form-control" aria-required="true" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
          @*   <div class="mb-3">
                <label asp-for="@Model.Image" class="form-label">Images</label>
                <input type ="file" name= "image" asp-for="@Model.Image" class="form-control" aria-required="true" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>*@
            <div class="mb-3">
                <input class="btn btn-success" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>