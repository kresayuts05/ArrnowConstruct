@model PostFormViewModel

@{
    this.ViewData["Style"] = "create.css";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="@Model.SiteId" />
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Title</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
               <div class="mb-3">
                <label asp-for="@Model.ShortContent" class="form-label">Short Content</label>
                <input asp-for="@Model.ShortContent" class="form-control" aria-r.+equired="" />
                <span asp-validation-for="ShortContent" class="text-danger"></span>
            </div>
              <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <input type ="text" asp-for="@Model.Description" class="form-control" aria-required="" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @*<input type="file" asp-for="@Model.Image" name="UploadedFile" />*@
             <div id="upload-image" class="form-floating">
            @*<label asp-for="Image"></label>*@
            <input id="upload" asp-for="Images" multiple accept="image/gif, image/jpeg, image/png">
            <span asp-validation-for="Images" class="text-danger"></span>
        </div>
        <div class="border-1">
            <img id="uploadedImage" alt="Uploaded Image" accept="image/gif, image/jpeg, image/png" style="display:none;">
        </div>
            <div class="mb-3">
                <input class="btn btn-success" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script type="module" src="/js/create.js" asp-append-version="true"></script>
}

    @section Styles {
    <link rel="stylesheet" href="/css/create.css" asp-append-version="true">
}