@model PostViewModel

@{
    ViewBag.Title = "Delete post";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Delete">
    <div class="row  align-items-center justify-content-center">
        <div class="col-md-6 ">
            <div class="form-group mt-2">
                <label asp-for="Title" class="control-label mb-1"><b>Title</b></label>
                <input asp-for="Title" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="ShortContent" class="control-label mb-1"><b>Short Content</b></label>
                <input asp-for="ShortContent" class="form-control" disabled="disabled" />
            </div>
             <div class="form-group mt-2">
                <label asp-for="CreatedOn" class="control-label mb-1"><b>Created on</b></label>
                <input asp-for="CreatedOn" class="form-control" disabled="disabled" />
            </div>
            <br>
            <div class="form-group  text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>