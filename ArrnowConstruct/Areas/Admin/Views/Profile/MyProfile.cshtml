@using ArrnowConstruct.Core.Models.Profile
@using ArrnowConstruct.Extensions
@model ProfileViewModel

@{
    ViewBag.Title = "Profile";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<section class="h-100 gradient-custom-2">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-9 col-xl-7">
                <div class="card">
                    <div class="rounded-top text-white d-flex flex-row" style="background-color: #202020; height:200px;">
                        <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                            <img src="@(Model.ProfilePictureUrl)"
                                 alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                                 style="width: 150px; z-index: 1">
                            @if (Model.Role == RoleConstants.Administrator)
                            {
                                <a asp-controller="Profile" asp-action="Edit" asp-area="Admin" class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                               style="z-index: 1;">
                                    Edit profile
                                </a>
                            }
                            else
                            {
                                @if (Model.Role == RoleConstants.Client)
                                {
                                    <a asp-controller="User" asp-area="Admin" asp-action="Approve" asp-route-id="@Model.Id" class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                               style="z-index: 1;">Approve</a>
                                }
                            }
                        </div>
                        <div class="ms-3" style="margin-top: 130px;">
                            <h5>@Model.FirstName @Model.LastName</h5>
                            <p>
                                @if (Model.Role == RoleConstants.Administrator)
                                {
                                    @RoleConstants.Administrator
                                }
                                else if(Model.Role == RoleConstants.Client)
                                {
                                    @RoleConstants.Client
                                }
                                else
                                {
                                      @RoleConstants.Constructor
                                }
                            </p>
                        </div>
                    </div>
                    <div class="p-4 text-black" style="background-color: #f8f9fa;">
                        <div class="d-flex justify-content-end text-center py-1">
                            <br><br><br>
                        </div>
                    </div>
                    <div class="card-body p-4 text-black">
                        <div class="mb-5">
                            <p class="lead fw-normal mb-1">About</p>
                            <div class="p-4" style="background-color: #f8f9fa;">
                                <p class="font-italic mb-1">Address: @Model.Address</p>
                                <p class="font-italic mb-1">Lives in @Model.City, @Model.Country</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4 text-black">
                        <div class="mb-5">
                            <p class="lead fw-normal mb-1">Contacts</p>
                            <div class="p-4" style="background-color: #f8f9fa;">
                                <p class="font-italic mb-1">Email: @Model.Email</p>
                                <p class="font-italic mb-1">Phone Number: @Model.PhoneNumber</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Styles {
<link rel="stylesheet" href="/css/profile.css" asp-append-version="true">
}