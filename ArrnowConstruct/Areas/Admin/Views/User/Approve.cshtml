@model ConstructorApproveViewModel

@{
    ViewBag.Title = "Approve";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Approve">
    <input type="hidden" asp-for="Id" />
    <div class="row  align-items-center justify-content-center">
        <div class="col-md-6 ">
            <div class="form-group mt-2">
                <label asp-for="Address" class="control-label mb-1"><b>Address</b></label>
                <input asp-for="Address" class="form-control" disabled="disabled" />
                 <input type="hidden" asp-for="Address" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Email" class="control-label mb-1"><b>Constructor Email</b></label>
                <input asp-for="Email" class="form-control" disabled="disabled" />
                 <input type="hidden" asp-for="Email" />
            </div>
              <div class="form-group mt-2">
                <label asp-for="Phone" class="control-label mb-1"><b>Phone Number</b></label>
                <input asp-for="Phone" class="form-control" disabled="disabled" />
                 <input type="hidden" asp-for="Phone" />
            </div>
                  <div class="mb-3">
                <label asp-for="MinimumSalary" class="form-label">Minimum Salary</label>
                <input asp-for="MinimumSalary" class="form-control" aria-required="" />
                <span asp-validation-for="MinimumSalary" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group  text-center">
                <input type="submit" value="Approve" class="btn btn-success" />
                 <a asp-controller="Admin"  asp-area ="Admin" asp-action="Clients" class="ml-2 btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</form>